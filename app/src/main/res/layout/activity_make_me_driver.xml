<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rua"
    tools:context=".aplication.MakeMeDriver">


    <TextView
        android:id="@+id/textCartaoCidadao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nº cc"
        android:textSize="30sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/valueCartaoCidadao"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textCartaoCidadao"
        android:layout_alignTop="@+id/textCartaoCidadao"
        android:inputType="text"
        android:layout_marginLeft="20dp"/>


    <TextView
        android:id="@+id/textCartaConducao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nº carta c."
        android:textSize="30sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="150dp"/>

    <EditText
        android:id="@+id/valueCartaConducao"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textCartaConducao"
        android:layout_alignTop="@+id/textCartaConducao"
        android:inputType="text"
        android:layout_marginLeft="20dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/goBackMakeMeDriver"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/principal"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:cornerRadius="20dp"
            app:strokeColor="@color/principal"
            app:strokeWidth="1dp"
            />

        <Button
            android:id="@+id/confirmMakeMeDriver"
            android:text="@string/confirm"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/principal"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:cornerRadius="20dp"
            app:strokeColor="@color/principal"
            app:strokeWidth="1dp"
            />
    </LinearLayout>
    <!--Nav Bar-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#6B6B6B"
        app:itemIconSize="35dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />



</RelativeLayout>