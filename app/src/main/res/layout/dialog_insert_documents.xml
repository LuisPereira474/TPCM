<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/popup_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/popup_help_view"
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:layout_centerInParent="true"
            android:layout_margin="2dp"
            app:cardBackgroundColor="#B4CDAF"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/iconClosePopUpConfirmRide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_cancel_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"/>


                <TextView
                    android:id="@+id/titleCartaoCidadao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="80dp"
                    android:text="@string/introduzir_cartao_cidadao"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/viewCartaoCidadao"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/border_input_text"
                    android:layout_toRightOf="@+id/titleCartaoCidadao"
                    android:layout_marginTop="72dp"
                    android:layout_marginLeft="50dp"/>


                <TextView
                    android:id="@+id/titleCartaConducao"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cartaConducao"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@+id/titleCartaoCidadao"
                    android:layout_marginTop="30dp"
                    android:layout_alignLeft="@+id/titleCartaoCidadao"/>

                <View
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/border_input_text"
                    android:layout_toRightOf="@+id/titleCartaConducao"
                    android:layout_marginTop="130dp"
                    android:layout_alignLeft="@+id/viewCartaoCidadao"
                    />


                <Button
                    android:id="@+id/confirmChangePass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#898686"
                    android:layout_below="@+id/titleCartaoCidadao"
                    android:text="@string/confirm"
                    android:layout_marginTop="120dp"
                    app:cornerRadius="20dp"
                    app:strokeColor="#F8F8F8"
                    app:strokeWidth="1dp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>