<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aplication.MapsAtividade">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:id="@+id/linearBlock">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/ccLabelPartida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="12dp"
            android:textSize="20sp"
            android:hint="@string/departure"
            app:startIconDrawable="@drawable/ic_baseline_place_24"
            app:startIconTint="#ea4335"
            app:endIconMode="clear_text"
            app:boxBackgroundColor="@color/white"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ccInputPartida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:inputType="text"
                />

            <RelativeLayout
                android:id="@+id/submitPartida"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/bottom_navigation"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginTop="-50dp"

                android:background="@drawable/rounded_btt"
                android:onClick="searchPartida">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableStart="@drawable/ic_search" />
            </RelativeLayout>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/ccLabelChegada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingHorizontal="12dp"
            android:textSize="20sp"
            android:hint="@string/destination"
            app:startIconDrawable="@drawable/ic_baseline_place_destino_24"
            app:endIconMode="clear_text"
            app:startIconTint="#3590ea"
            app:boxBackgroundColor="@color/white"
            android:layout_below="@+id/ccLabelPartida"
            android:layout_marginBottom="3dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ccInputChegada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:inputType="text"
                />

            <RelativeLayout
                android:id="@+id/submitChegada"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/bottom_navigation"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginTop="-50dp"
                android:background="@drawable/rounded_btt"
                android:onClick="searchChegada">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableStart="@drawable/ic_search" />
            </RelativeLayout>
        </com.google.android.material.textfield.TextInputLayout>

        <!--<EditText
            android:id="@+id/ccInputPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>-->

    </RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearBlock1"
        android:layout_below="@+id/linearBlock"
        tools:context=".MapsActivity" />

    <LinearLayout
        android:id="@+id/linearBlock1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        >

        <Button
            android:id="@+id/Button02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:layout_margin="5dp"
            android:onClick="cancel"
            />
        <Button
            android:id="@+id/Button03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:layout_margin="5dp"
            android:onClick="confirm"/>
    </LinearLayout>

</RelativeLayout>





