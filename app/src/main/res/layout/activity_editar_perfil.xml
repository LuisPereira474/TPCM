<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aplication.EditarPerfil">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/editPerfilAvatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/avatar_girl"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/editNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:layout_below="@+id/editPerfilAvatar"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@+id/editNameLabel"
        android:layout_marginTop="10dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/editEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_below="@+id/editName"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@+id/editEmailLabel"
        android:layout_marginTop="10dp"
        android:inputType="text"/>
    <TextView
        android:id="@+id/editPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_below="@+id/editEmail"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@+id/editPasswordLabel"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/editConfirmPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmpassword"
        android:layout_below="@+id/editPassword"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/editConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@+id/editConfirmPasswordLabel"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/errorMissingFieldsEditarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/errorMissingFields"
        android:layout_below="@+id/editConfirmPassword"
        android:textColor="#FF0000"
        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editConfirmPassword"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/goBack"
            android:layout_weight="1"
            android:onClick="goProfile"
            android:text="@string/cancel"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/principal"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:cornerRadius="20dp"
            app:strokeColor="@color/principal"
            app:strokeWidth="1dp"
            />

        <Button
            android:id="@+id/confirmEdit"
            android:text="@string/confirm"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:onClick="editProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/principal"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:cornerRadius="20dp"
            app:strokeColor="@color/principal"
            app:strokeWidth="1dp"
            />

    </LinearLayout>

</RelativeLayout>